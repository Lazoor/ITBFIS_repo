<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dk.itbfis.anettes_sandwich">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".StartActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SandwichChoiceActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ButtonItemLayout"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BreadChoiceActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainIngredientChoiceActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".SidesChoiceActivity" />
        <activity android:name=".CheckboxItemLayout" />
        <activity android:name=".DressingChoiceActivity" />
        <activity android:name=".DrinkChoiceActivity" />
        <activity android:name=".shoppingCartActivity" />
        <activity android:name=".PaymentChoiceActivity" />
        <activity android:name=".CompletePaymentActivity" />
        <activity android:name=".OrderCompleteActivity"></activity>
    </application>

</manifest>