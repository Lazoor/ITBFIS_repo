<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_shopping_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="dk.itbfis.anettes_sandwich.shoppingCartActivity">

    <TextView
        android:text="@string/shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payment_choice_text"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="@dimen/title_textsize"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/titleColor" />

    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/payment_choice_text"
        android:id="@+id/cart_listview"
        android:layout_marginBottom="100dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/betal_tekst"
        android:id="@+id/fab_pay"
        app:backgroundTint="?attr/actionMenuTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/tilfoej_tekst"
        android:id="@+id/floatingActionButton5"
        app:backgroundTint="?attr/actionMenuTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

</android.support.constraint.ConstraintLayout>
