<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_button_adapter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="dk.itbfis.anettes_sandwich.ButtonItemLayout">

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/item_image_imageview"
        android:layout_width="568dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_title_textview"
        android:textSize="@dimen/item_textsize"
        android:text="Title"
        app:layout_constraintRight_toRightOf="@+id/item_image_imageview"
        app:layout_constraintLeft_toLeftOf="@+id/item_image_imageview"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_image_imageview" />

    <TextView
        android:text="Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_info_textview"
        app:layout_constraintRight_toRightOf="@+id/item_image_imageview"
        app:layout_constraintLeft_toLeftOf="@+id/item_image_imageview"
        app:layout_constraintTop_toBottomOf="@+id/item_title_textview"
        android:layout_marginTop="8dp" />

    <View
        android:layout_width="wrap_content"
        android:background="#F0F0F0"
        android:id="@+id/view"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_info_textview" />



</android.support.constraint.ConstraintLayout>
