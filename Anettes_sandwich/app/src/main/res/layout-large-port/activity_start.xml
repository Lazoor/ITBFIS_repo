<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="dk.itbfis.anettes_sandwich.StartActivity">

    <ImageView
        app:srcCompat="@drawable/anetteslogo_minusbg"
        android:id="@+id/logo_imageview"
        android:maxHeight="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_width="450dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp" />

    <Button
        android:text="@string/Start"
        android:id="@+id/start_button"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toBottomOf="@+id/logo_imageview"
        android:layout_width="300dp"
        android:layout_height="200dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:elevation="4dp"
        android:background="@color/colorPrimaryDark"
        tools:textSize="60sp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/item_textsize"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/american_flag"
        android:id="@+id/imageView3"
        android:layout_marginStart="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/start_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/danish_flag"
        android:id="@+id/imageView4"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/start_button"
        android:layout_marginStart="30dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        android:layout_marginLeft="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/german_flag"
        android:id="@+id/imageView6"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/start_button"
        android:layout_marginStart="30dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView4"
        android:layout_marginLeft="30dp" />

    <TextView
        android:text="Velkommen til"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome_text"
        android:textAppearance="@android:style/TextAppearance.Large"
        app:layout_constraintBottom_toTopOf="@+id/logo_imageview"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

</android.support.constraint.ConstraintLayout>
