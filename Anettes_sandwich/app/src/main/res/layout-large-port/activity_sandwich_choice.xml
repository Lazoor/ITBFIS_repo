<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sandwich_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="dk.itbfis.anettes_sandwich.SandwichChoiceActivity">

    <Button
        android:text="@string/Start"
        android:id="@+id/build_sandwich_button"
        android:layout_width="0dp"
        android:layout_height="200dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:elevation="4dp"
        android:background="@color/colorPrimaryDark"
        tools:textSize="60sp"
        android:textColor="@android:color/white"
        android:textSize="70sp"
        android:textStyle="bold"
        android:layout_marginStart="50dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/choose_sandwich_text"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <Button
        android:text="@string/Start"
        android:id="@+id/chicken_sandwich_button"
        android:layout_width="0dp"
        android:layout_height="200dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:elevation="4dp"
        android:background="@color/colorPrimaryDark"
        tools:textSize="60sp"
        android:textColor="@android:color/white"
        android:textSize="70sp"
        android:textStyle="bold"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/build_sandwich_button" />

    <TextView
        android:text="@string/choose_sandwich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose_sandwich_text"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="70sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
